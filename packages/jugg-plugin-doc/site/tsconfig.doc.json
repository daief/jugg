{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    // "outDir": "siteDist", // https://github.com/microsoft/TypeScript/issues/14538#issuecomment-455894308
    "declaration": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["*"]
}
